<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout style="@style/titlesytle">

        <RelativeLayout
            android:id="@+id/back"
            android:layout_width="@dimen/dp_30"
            android:layout_height="match_parent">

            <ImageView style="@style/titleback" />
        </RelativeLayout>


        <TextView
            style="@style/titletext"
            android:text="提现申请" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_74"
        android:background="@color/appbar"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_tixian_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="6,098.45"
                android:textColor="#fff"
                android:textSize="@dimen/sp_18" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:text="可提现余额(元)"
                android:textColor="#fff"
                android:textSize="@dimen/sp_13" />
        </LinearLayout>

        <View
            android:layout_width="@dimen/dp_1"
            android:layout_height="@dimen/dp_32"
            android:layout_gravity="center"
            android:background="#C6C6C6" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_tixian_dongjie"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="47,098.45"
                android:textColor="#fff"
                android:textSize="@dimen/sp_18" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:text="提现冻结金额(元)"
                android:textColor="#fff"
                android:textSize="@dimen/sp_13" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/view_bank"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_74"
        android:layout_marginLeft="@dimen/dp_13"
        android:layout_marginTop="@dimen/dp_17"
        android:layout_marginRight="@dimen/dp_13"
        android:background="@drawable/tixian_frame"
        android:elevation="2dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:visibility="gone">

        <ImageView
            android:layout_width="@dimen/dp_29"
            android:layout_height="@dimen/dp_24"
            android:layout_marginLeft="@dimen/dp_31"
            android:src="@mipmap/icon_card" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_27"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="中国工商银行"
                android:textColor="#363636"
                android:textSize="@dimen/sp_17" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_7"
                android:text="尾号6986储蓄卡"
                android:textColor="#666666"
                android:textSize="@dimen/sp_15" />
        </LinearLayout>

        <ImageView
            android:layout_width="@dimen/dp_6"
            android:layout_height="@dimen/dp_10"
            android:layout_marginLeft="@dimen/dp_124"
            android:src="@mipmap/sign_icon1" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/view_addbank"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_74"
        android:layout_marginLeft="@dimen/dp_13"
        android:layout_marginTop="@dimen/dp_17"
        android:layout_marginRight="@dimen/dp_13"
        android:background="@drawable/tixian_frame"
        android:elevation="2dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_18"
            android:text="您还未添加银行卡信息"
            android:textColor="#666666"
            android:textSize="@dimen/sp_15" />

        <TextView
            android:id="@+id/bt_addbank"
            android:layout_width="@dimen/dp_90"
            android:layout_height="@dimen/dp_26"
            android:layout_marginLeft="@dimen/dp_73"
            android:background="@drawable/addbank_button"
            android:gravity="center"
            android:text="马上添加"
            android:textColor="#FF5603"
            android:textSize="@dimen/sp_13" />


    </LinearLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_13"
        android:layout_marginTop="@dimen/dp_17"
        android:text="提现金额"
        android:textColor="#363636"
        android:textSize="@dimen/sp_15" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_61"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:layout_marginLeft="@dimen/dp_13"
        android:layout_marginTop="@dimen/dp_23"
        android:layout_marginRight="@dimen/dp_13">

        <TextView
            android:id="@+id/tx_tixian_yuan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/dp_4"
            android:text="￥"
            android:textColor="#363636"
            android:textSize="@dimen/sp_25" />

        <EditText
            android:id="@+id/tv_money"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="@dimen/dp_21"
            android:text="56565"
            android:singleLine="true"
            android:textColor="#363636"
            android:textSize="@dimen/sp_38"
            android:theme="@style/MyEditText" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_13"
        android:gravity="right"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="最低提现金额为"
            android:textColor="#363636"
            android:textSize="@dimen/sp_13" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="100"
            android:textColor="#FF5603"
            android:textSize="@dimen/sp_13" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="元"
            android:textColor="#363636"
            android:textSize="@dimen/sp_13" />
    </LinearLayout>

    <TextView
        android:id="@+id/bt_sure"
        android:layout_width="@dimen/dp_260"
        android:layout_height="@dimen/dp_44"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dp_137"
        android:background="@drawable/login_button"
        android:gravity="center"
        android:text="确认提现"
        android:textColor="#fff"
        android:textSize="@dimen/sp_17" />
</LinearLayout>
