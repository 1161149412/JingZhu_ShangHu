<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayou_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical">

    <RelativeLayout style="@style/titlesytle">

        <RelativeLayout
            android:id="@+id/back"
            android:layout_width="@dimen/dp_30"
            android:layout_height="match_parent">

            <ImageView style="@style/titleback" />
        </RelativeLayout>

        <TextView
            style="@style/titletext"
            android:text="提现申请" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_74"
        android:background="@color/appbar"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_ke_tixian_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="123.5"
                android:textColor="#fff"
                android:textSize="@dimen/sp_18" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:text="可提现余额(元)"
                android:textColor="#fff"
                android:textSize="@dimen/sp_13" />
        </LinearLayout>

        <View
            android:layout_width="@dimen/dp_1"
            android:layout_height="@dimen/dp_32"
            android:layout_gravity="center"
            android:background="#C6C6C6" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_dongjie_tixian"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="123.5"
                android:textColor="#fff"
                android:textSize="@dimen/sp_18" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:text="提现冻结金额(元)"
                android:textColor="#fff"
                android:textSize="@dimen/sp_13" />
        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/view_bank"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_121"
        android:background="@mipmap/card_mine_bg"
        android:layout_marginLeft="@dimen/dp_12"
        android:layout_marginRight="@dimen/dp_14"
        android:layout_marginTop="@dimen/dp_17"
        android:visibility="gone"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_18"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/dp_20"
                android:layout_height="@dimen/dp_16"
                android:layout_marginLeft="@dimen/dp_22"
                android:layout_gravity="center_vertical"
                android:src="@mipmap/card_mine_write" />

            <TextView
                android:id="@+id/tv_back_card_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_13"
                android:text="中国工商银行"
                android:textColor="#fff"
                android:textSize="@dimen/sp_16" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="right">
                <ImageView
                    android:layout_width="@dimen/dp_6"
                    android:layout_height="@dimen/dp_10"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="@dimen/dp_2"
                    android:src="@mipmap/sign_icon_right"
                    android:layout_marginRight="@dimen/dp_20"/>
            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/dp_16"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_back_card"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="6217 **** **** **** 9131"
                android:textColor="#fff"
                android:textSize="@dimen/sp_15" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_16">

            <TextView
                android:id="@+id/tv_back_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_14"
                android:layout_marginLeft="@dimen/dp_22"
                android:textColor="#fff"
                android:text="姓名"/>

            <TextView
                android:id="@+id/tv_back_tle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:textSize="@dimen/sp_14"
                android:textColor="#fff"
                android:layout_marginRight="@dimen/dp_20"
                android:layout_marginLeft="@dimen/dp_22"
                android:text="136 6920 0087"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/view_addbank"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_74"
        android:layout_marginLeft="@dimen/dp_13"
        android:layout_marginTop="@dimen/dp_17"
        android:layout_marginRight="@dimen/dp_13"
        android:background="@drawable/tixian_frame"
        android:elevation="2dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_18"
            android:text="您还未添加银行卡信息"
            android:textColor="#666666"
            android:textSize="@dimen/sp_15" />

        <TextView
            android:id="@+id/bt_addbank"
            android:layout_width="@dimen/dp_90"
            android:layout_height="@dimen/dp_26"
            android:layout_marginLeft="@dimen/dp_73"
            android:background="@drawable/addbank_button"
            android:gravity="center"
            android:text="马上添加"
            android:textColor="#FF5603"
            android:textSize="@dimen/sp_13" />

    </LinearLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_13"
        android:layout_marginTop="@dimen/dp_17"
        android:text="提现金额"
        android:textColor="#363636"
        android:textSize="@dimen/sp_15" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="@dimen/dp_13"
        android:layout_marginTop="@dimen/dp_23"
        android:layout_marginRight="@dimen/dp_13">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:gravity="center"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tx_tixian_yuan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="￥"
                android:textColor="#363636"
                android:textSize="@dimen/sp_25" />

            <EditText
                android:id="@+id/edit_money"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lines="1"
                android:gravity="center_vertical|top"
                android:inputType="number"
                android:singleLine="true"
                android:textColor="#363636"
                android:textSize="@dimen/sp_38"
                android:background="@null" />
        </LinearLayout>


        <!--<RelativeLayout-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="@dimen/dp_60"-->
            <!--android:focusable="true"-->
            <!--android:focusableInTouchMode="true">-->

            <!--<TextView-->
                <!--android:id="@+id/tx_tixian_yuan"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_alignParentBottom="true"-->

                <!--android:layout_marginBottom="@dimen/dp_8"-->
                <!--android:text="￥"-->
                <!--android:textColor="#363636"-->
                <!--android:textSize="@dimen/sp_25" />-->

            <!--<EditText-->
                <!--android:id="@+id/edit_money"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_marginLeft="@dimen/dp_20"-->
                <!--android:hint="请输入金额"-->
                <!--android:lines="1"-->
                <!--android:gravity="bottom"-->
                <!--android:inputType="number"-->
                <!--android:singleLine="true"-->
                <!--android:textColor="#363636"-->
                <!--android:textSize="@dimen/sp_30"-->
                <!--android:background="@null" />-->

        <!--</RelativeLayout>-->
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:layout_below="@+id/edit_money"
            android:background="#D6D6D6" />
    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_13"
        android:gravity="right"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="最低提现金额为"
            android:textColor="#363636"
            android:textSize="@dimen/sp_13" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="20"
            android:textColor="#FF5603"
            android:textSize="@dimen/sp_13" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="元"
            android:textColor="#363636"
            android:textSize="@dimen/sp_13" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="@dimen/dp_12"
            android:layout_height="@dimen/dp_12"
            android:src="@mipmap/prompt_small_icon"
            android:layout_marginLeft="@dimen/dp_15"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#363636"
            android:layout_marginLeft="@dimen/dp_6"
            android:text="提现手续费"/>

        <TextView
            android:id="@+id/tv_tixian_sxf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#363636"
            android:layout_marginLeft="@dimen/dp_6"
            android:text="0.00"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#363636"
            android:layout_marginLeft="@dimen/dp_6"
            android:text="元"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#363636"
            android:layout_marginLeft="@dimen/dp_35"
            android:layout_marginRight="@dimen/dp_15"
            android:text="提现手续费率：提现手续费按照提现金额的千分之一收取，不足一千按一元算"/>

    </LinearLayout>

    <TextView
        android:id="@+id/bt_sure"
        android:layout_width="@dimen/dp_260"
        android:layout_height="@dimen/dp_44"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dp_20"
        android:background="@drawable/login_button_true"
        android:gravity="center"
        android:text="确认提现"
        android:textColor="#fff"
        android:textSize="@dimen/sp_17" />
</LinearLayout>
