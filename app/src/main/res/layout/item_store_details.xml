<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/dp_10"
    android:background="@drawable/index_frame">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_36"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="@dimen/dp_13"
            android:layout_height="@dimen/dp_13"
            android:src="@mipmap/details_icon01"
            android:layout_marginLeft="@dimen/dp_10" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_14"
            android:layout_marginLeft="@dimen/dp_5"
            android:text="JZCB0191000288"
            android:textColor="#363636"/>

        <LinearLayout
            android:id="@+id/linear_layout_online"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:gravity="right|center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/dp_12"
                android:layout_height="@dimen/dp_12"
                android:layout_marginRight="@dimen/dp_8"
                android:src="@mipmap/details_icon_online"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dp_13"
                android:textSize="@dimen/sp_14"
                android:textColor="#363636"
                android:text="在线"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear_layout_offline"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right|center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/dp_12"
                android:layout_height="@dimen/dp_12"
                android:layout_marginRight="@dimen/dp_8"
                android:src="@mipmap/details_icon_offline"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dp_13"
                android:textSize="@dimen/sp_14"
                android:textColor="#363636"
                android:text="离线"/>

        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:layout_marginLeft="@dimen/dp_8"
        android:layout_marginRight="@dimen/dp_8"
        android:background="#E6E6E6"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_64"
        android:layout_marginBottom="@dimen/dp_5"
        android:layout_marginTop="@dimen/dp_5"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#363636"
                    android:layout_marginLeft="@dimen/dp_11"
                    android:textSize="@dimen/sp_14"
                    android:text="昨日订单总额："/>

                <TextView
                    android:id="@+id/item_tv_yesterday_order_all_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#363636"
                    android:textSize="@dimen/sp_14"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:text="0元"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#363636"
                    android:layout_marginLeft="@dimen/dp_11"
                    android:textSize="@dimen/sp_14"
                    android:text="昨日订单总量："/>

                <TextView
                    android:id="@+id/item_tv_yesterday_order_total"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#363636"
                    android:textSize="@dimen/sp_14"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:text="0笔"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#363636"
                    android:layout_marginLeft="@dimen/dp_11"
                    android:textSize="@dimen/sp_14"
                    android:text="订单总额："/>

                <TextView
                    android:id="@+id/item_tv_order_all"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#363636"
                    android:textSize="@dimen/sp_14"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:text="0元"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#363636"
                    android:layout_marginLeft="@dimen/dp_11"
                    android:textSize="@dimen/sp_14"
                    android:text="订单总量："/>

                <TextView
                    android:id="@+id/item_tv_order_total"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#363636"
                    android:textSize="@dimen/sp_14"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:text="0笔"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>