<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/index_frame"
    android:layout_margin="@dimen/dp_8">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_8"
            android:src="@mipmap/store_icon"/>

        <TextView
            android:id="@+id/item_tv_shop_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_8"
            android:text="兵哥豌豆面（红牌楼店）"
            android:textColor="#363636"
            android:textSize="@dimen/sp_15"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="right|center_vertical">
            <TextView
                android:id="@+id/item_tv_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#363636"
                android:textSize="@dimen/sp_15"
                android:layout_marginRight="@dimen/dp_11"
                android:text="0"/>
        </LinearLayout>
    </LinearLayout>
    
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="#E6E6E6" />
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_10"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_12"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/item_tv_yesterday_order"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_21"
                    android:textColor="#5CACFF"
                    android:text="0"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_4"
                    android:textSize="@dimen/sp_11"
                    android:textColor="#363636"
                    android:text="笔"/>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_12"
                android:textColor="#363636"
                android:textSize="@dimen/sp_15"
                android:text="昨日订单"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_weight="1">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_12"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/item_tv_yesterday_income"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_21"
                    android:textColor="#E55C5C"
                    android:text="0"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_4"
                    android:textSize="@dimen/sp_11"
                    android:textColor="#363636"
                    android:text="元"/>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_12"
                android:textColor="#363636"
                android:textSize="@dimen/sp_15"
                android:text="昨日收益"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_weight="1">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_12"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/item_tv_for_me_earn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_21"
                    android:textColor="#FF5603"
                    android:text="0"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_4"
                    android:textSize="@dimen/sp_11"
                    android:textColor="#363636"
                    android:text="元 "/>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_12"
                android:textColor="#363636"
                android:textSize="@dimen/sp_15"
                android:text="为我赚取"/>
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:layout_marginLeft="@dimen/dp_13"
        android:layout_marginRight="@dimen/dp_13"
        android:background="#E6E6E6" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_11"
            android:textColor="#363636"
            android:textSize="@dimen/sp_14"
            android:text="离线设备："/>

        <TextView
            android:id="@+id/item_tv_offline_device"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_6"
            android:textColor="#E55C5C"
            android:textSize="@dimen/sp_14"
            android:text="0"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_5"
            android:textColor="#363636"
            android:textSize="@dimen/sp_14"
            android:text="台"/>

        <LinearLayout
            android:id="@+id/linear_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="right|center_vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#363636"
                android:textSize="@dimen/sp_13"
                android:layout_marginRight="@dimen/dp_9"
                android:text="门店设备"/>

            <ImageView
                android:id="@+id/item_img_switch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dp_11"
                android:src="@mipmap/down_sign"/>
        </LinearLayout>
    </LinearLayout>
    <View
        android:id="@+id/view_line"
        android:layout_width="match_parent"
        android:visibility="gone"
        android:layout_height="@dimen/dp_5"
        android:background="#fff6f6f6" />

    <LinearLayout
        android:id="@+id/item_linear"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:visibility="gone"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_40"
            android:gravity="center"
            android:layout_weight="1.3"
            android:textColor="#FF5603"
            android:text="设备编号"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_40"
            android:gravity="center"
            android:layout_weight="1"
            android:textColor="#FF5603"
            android:text="昨日订单"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_40"
            android:gravity="center"
            android:layout_weight="1"
            android:textColor="#FF5603"
            android:text="累计订单"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_40"
            android:gravity="center"
            android:layout_weight="0.7"
            android:textColor="#FF5603"
            android:text="状态"/>
    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/item_recycler"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </android.support.v7.widget.RecyclerView>


</LinearLayout>