<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!--<TextView-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="@dimen/dp_30"-->
        <!--android:background="@color/appbar"-->
        <!--android:gravity="center"-->
        <!--android:text="首页"-->
        <!--android:textColor="#fff"-->
        <!--android:textSize="@dimen/sp_19" />-->

    <RelativeLayout style="@style/titlesytle">

        <TextView
            style="@style/titletext"
            android:text="首页" />

        <ImageView
            android:id="@+id/personal_information"
            android:layout_width="@dimen/dp_19"
            android:layout_height="@dimen/dp_16"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_13"
            android:src="@mipmap/people" />
    </RelativeLayout>


    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_120"
                android:background="@color/appbar"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_15"
                    android:text="昨日收益(元)"
                    android:textColor="#fff"
                    android:textSize="@dimen/sp_11" />

                <TextView
                    android:id="@+id/yesterday_money"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_2"
                    android:text="0.00"
                    android:textColor="#fff"
                    android:textSize="@dimen/dp_25" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="累计收益(元)"
                            android:textColor="#fff"
                            android:textSize="@dimen/sp_11" />

                        <TextView
                            android:id="@+id/all_money"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_10"
                            android:text="0.00"
                            android:textColor="#fff"
                            android:textSize="@dimen/sp_16" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="本月收益(元)"
                            android:textColor="#fff"
                            android:textSize="@dimen/sp_11" />

                        <TextView
                            android:id="@+id/month_money"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_10"
                            android:text="0.00"
                            android:textColor="#fff"
                            android:textSize="@dimen/sp_16" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="今日收益(元)"
                            android:textColor="#fff"
                            android:textSize="@dimen/sp_11" />

                        <TextView
                            android:id="@+id/today_money"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_10"
                            android:text="0.00"
                            android:textColor="#fff"
                            android:textSize="@dimen/sp_16" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_128"
                android:layout_marginTop="@dimen/dp_10">

                <ImageView
                    android:layout_width="@dimen/dp_356"
                    android:layout_height="@dimen/dp_128"
                    android:layout_centerInParent="true"
                    android:scaleType="fitXY"
                    android:src="@mipmap/balance_bg_home" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_45"
                    android:layout_marginTop="@dimen/dp_21"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/bt_index_icon"
                        android:layout_width="@dimen/dp_13"
                        android:layout_height="@dimen/dp_15"
                        android:src="@mipmap/money_write_home" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:text="可用余额："
                        android:textColor="#fff"
                        android:textSize="@dimen/sp_14" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_45"
                    android:layout_marginTop="@dimen/dp_49"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tx_index_money"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0.00"
                        android:textColor="#fff"
                        android:textSize="@dimen/sp_24" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_5"
                        android:text="元"
                        android:textColor="#fff"
                        android:textSize="@dimen/sp_14" />
                </LinearLayout>

                <TextView
                    android:id="@+id/bt_index_tixian"
                    android:layout_width="@dimen/dp_82"
                    android:layout_height="@dimen/dp_33"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="@dimen/dp_37"
                    android:layout_marginRight="@dimen/dp_32"
                    android:background="@mipmap/bottom_yellow_home"
                    android:gravity="center"
                    android:paddingBottom="@dimen/dp_5"
                    android:text="立即提现"
                    android:textColor="#F46806"
                    android:textSize="@dimen/sp_13" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/bt_index_tixian"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/dp_35"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/bt_index_jilu"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="提现记录"
                        android:textColor="#F6F6E1"
                        android:textSize="@dimen/sp_13" />

                    <ImageView
                        android:layout_width="@dimen/dp_8"
                        android:layout_height="@dimen/dp_8"
                        android:layout_marginLeft="@dimen/dp_5"
                        android:src="@mipmap/sign_icon" />
                </LinearLayout>

                <TextView
                    android:id="@+id/deposit_money"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="@dimen/dp_45"
                    android:layout_marginBottom="@dimen/dp_21"
                    android:text="已提现金额：0.00元"
                    android:textColor="#F6F6E1"
                    android:textSize="@dimen/sp_13" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_47"
                android:layout_marginTop="@dimen/dp_13"
                android:layout_marginLeft="@dimen/dp_12"
                android:layout_marginRight="@dimen/dp_13"
                android:background="@drawable/index_frame"
                android:elevation="@dimen/dp_3">

                <ImageView
                    android:layout_width="@dimen/dp_11"
                    android:layout_height="@dimen/dp_14"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="19dp"
                    android:layout_marginStart="19dp"
                    android:src="@mipmap/phone_number" />

                <TextView
                    android:layout_width="@dimen/dp_194"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_16"
                    android:layout_marginLeft="@dimen/dp_34"
                    android:textSize="@dimen/sp_14"
                    android:text="客服电话：028 8666 6869"
                    android:id="@+id/textView" />

                <Button
                    android:id="@+id/btn_callPhone"
                    android:layout_width="@dimen/dp_73"
                    android:layout_height="@dimen/dp_25"
                    android:background="@drawable/index_button"
                    android:textSize="@dimen/sp_12"
                    android:textColor="#fff"
                    android:layout_marginTop="@dimen/dp_11"
                    android:layout_marginRight="@dimen/dp_11"
                    android:layout_marginLeft="@dimen/dp_266"
                    android:text="联系客服"/>

            </RelativeLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_114"
                android:layout_marginTop="@dimen/dp_13"
                android:layout_marginLeft="@dimen/dp_12"
                android:layout_marginRight="@dimen/dp_13"
                android:orientation="vertical"
                android:background="@drawable/index_frame"
                android:paddingTop="@dimen/dp_13"
                android:elevation="@dimen/dp_3"
                android:paddingLeft="@dimen/dp_14">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="我的设备"
                    android:textColor="#363636"
                    android:textSize="@dimen/sp_14" />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:background="#E6E6E6"
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_marginRight="@dimen/dp_11"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_19"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="@dimen/dp_34"
                            android:layout_height="@dimen/dp_42"
                            android:src="@mipmap/charge_home_icon" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/dp_42"
                            android:layout_marginLeft="@dimen/dp_5"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/rent"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="待租借：0个"
                                android:textColor="#363636"
                                android:textSize="@dimen/sp_13" />

                            <TextView
                                android:id="@+id/rentting"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="租借中：0个"
                                android:textColor="#363636"
                                android:textSize="@dimen/sp_13" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="@dimen/dp_34"
                            android:layout_height="@dimen/dp_42"
                            android:src="@mipmap/equipment_home_icon" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/dp_42"
                            android:layout_marginLeft="@dimen/dp_5"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/off_line"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="离线：0台"
                                android:textColor="#363636"
                                android:textSize="@dimen/sp_13" />

                            <TextView
                                android:id="@+id/on_line"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="在线：0台个"
                                android:textColor="#363636"
                                android:textSize="@dimen/sp_13" />
                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_45"
                android:gravity="right">

                <TextView
                    android:id="@+id/bt_index_zhuxiao"
                    android:layout_width="@dimen/dp_64"
                    android:layout_height="@dimen/dp_44"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/logout_button"
                    android:gravity="center"
                    android:text="注销"
                    android:textColor="#fff"
                    android:textSize="@dimen/sp_17" />
            </LinearLayout>

        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</LinearLayout>
