<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".filter.Filter_TixianActivity">

    <RelativeLayout style="@style/titlesytle">

        <RelativeLayout
            android:id="@+id/back"
            android:layout_width="@dimen/dp_30"
            android:layout_height="match_parent">

            <ImageView style="@style/titleback" />

        </RelativeLayout>


        <TextView
            style="@style/titletext"
            android:text="筛选" />

    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_12"
        android:layout_marginTop="@dimen/dp_22"
        android:text="申请日期:"
        android:textColor="#707070"
        android:textSize="@dimen/sp_14" />

    <TextView
        android:id="@+id/filter_time"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_54"
        android:layout_marginLeft="@dimen/dp_21"
        android:gravity="center_vertical"
        android:text="2019-02-28"
        android:textColor="#363636"
        android:textSize="@dimen/sp_16" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_12"
        android:text="提现金额:"
        android:textColor="#707070"
        android:textSize="@dimen/sp_14" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_48"
        android:layout_marginTop="@dimen/dp_15"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <EditText
            android:layout_width="@dimen/dp_120"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:hint="输入最低金额"
            android:inputType="number"
            android:singleLine="true"
            android:textColor="#363636"
            android:textColorHint="#B6B6B6"
            android:textSize="@dimen/sp_14"
            android:theme="@style/MyEditText" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:gravity="center_vertical"
            android:text="至"
            android:textColor="#363636"
            android:textSize="@dimen/sp_16" />

        <EditText
            android:layout_width="@dimen/dp_120"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:hint="输入最高金额"
            android:inputType="number"
            android:singleLine="true"
            android:textColor="#363636"
            android:textColorHint="#B6B6B6"
            android:textSize="@dimen/sp_14"
            android:theme="@style/MyEditText" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="@dimen/dp_260"
        android:layout_height="@dimen/dp_44"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dp_280"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/filter_bt_reset"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/reset_button"
            android:gravity="center"
            android:text="重置"
            android:textColor="#F6F6F6"
            android:textSize="@dimen/sp_17" />

        <TextView
            android:id="@+id/filter_bt_submit"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/submit_button"
            android:gravity="center"
            android:text="确定"
            android:textColor="#F6F6F6"
            android:textSize="@dimen/sp_17" />
    </LinearLayout>

</LinearLayout>