<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout style="@style/titlesytle">

        <TextView
            style="@style/titletext"
            android:text="我的" />

        <TextView
            android:id="@+id/bt_filter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_29"
            android:visibility="gone"
            android:text="筛选"
            android:textColor="#fff"
            android:textSize="@dimen/sp_14" />

        <ImageView
            android:layout_width="@dimen/dp_13"
            android:layout_height="@dimen/dp_11"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:visibility="gone"
            android:layout_marginRight="@dimen/dp_13"
            android:src="@mipmap/filter_botton" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_74"
        android:visibility="gone"
        android:background="@color/appbar"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_zaixian"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textColor="#fff"
                android:textSize="@dimen/sp_18" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:text="在线设备(台)"
                android:textColor="#fff"
                android:textSize="@dimen/sp_13" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_lixian"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textColor="#fff"
                android:textSize="@dimen/sp_18" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:text="离线设备(台)"
                android:textColor="#fff"
                android:textSize="@dimen/sp_13" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:id="@+id/bt_shebei_dongjie"
                android:layout_width="@dimen/dp_90"
                android:layout_height="@dimen/dp_26"
                android:layout_centerInParent="true"
                android:background="@drawable/dongjie_jianbian"
                android:gravity="center"
                android:text="冻结的设备"
                android:textColor="#FF5603"
                android:textSize="@dimen/sp_13" />
        </RelativeLayout>
    </LinearLayout>


    <com.androidkun.xtablayout.XTabLayout
        android:id="@+id/xtab"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_48"
        android:layout_gravity="center_horizontal"
        android:background="#fff"
        app:xTabDisplayNum="2"
        app:xTabDividerWidthWidthText="true"
        app:xTabIndicatorColor="#FF5603"
        app:xTabIndicatorHeight="@dimen/dp_2"
        app:xTabMode="scrollable"
        app:xTabSelectedTextColor="#FF5603"
        app:xTabTextColor="#363636"
        app:xTabTextSize="@dimen/sp_14" />

    <android.support.v4.view.ViewPager
        android:id="@+id/viewpage"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_120"
            android:background="@mipmap/center_top_bg"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_25"
            android:layout_marginRight="@dimen/dp_25"
            android:orientation="vertical"
            android:background="@mipmap/mine_bg_img">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/img_circle"
                    android:layout_width="@dimen/dp_68"
                    android:layout_height="@dimen/dp_68"
                    android:layout_marginLeft="@dimen/dp_36"
                    android:layout_marginTop="@dimen/dp_30"
                    android:src="@mipmap/ic_launcher"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="星巴克（新尚天地店）"
                        android:layout_marginTop="@dimen/dp_45"
                        android:textSize="@dimen/sp_17"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="海科路东段688号"
                        android:layout_marginTop="@dimen/dp_6"
                        android:textSize="@dimen/sp_13"/>

                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_55">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/dp_26"
                        android:layout_height="@dimen/dp_26"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/dp_26"
                        android:src="@mipmap/id_p"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/dp_3"
                        android:textSize="@dimen/sp_13"
                        android:textColor="#363636"
                        android:text="890126"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/dp_26"
                        android:layout_height="@dimen/dp_26"
                        android:layout_gravity="center"
                        android:src="@mipmap/tel_p"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/dp_3"
                        android:textSize="@dimen/sp_13"
                        android:textColor="#363636"
                        android:text="184****4659"/>

                    <ImageView
                        android:id="@+id/image_update_tel"
                        android:layout_width="@dimen/dp_11"
                        android:layout_height="@dimen/dp_11"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/dp_11"
                        android:src="@mipmap/revise_nomal"/>

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <ImageView
            android:id="@+id/status_img"
            android:layout_width="@dimen/dp_60"
            android:layout_height="@dimen/dp_50"
            android:layout_marginRight="@dimen/dp_25"
            android:layout_alignParentRight="true"
            android:src="@mipmap/img_authentication"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/linear_layout_information"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_47"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/dp_16"
                android:layout_height="@dimen/dp_16"
                android:src="@mipmap/mine_center_icon_01"
                android:layout_marginLeft="@dimen/dp_39"
                android:layout_gravity="center" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_gravity="center"
                android:text="认证信息"
                android:textSize="@dimen/sp_15"
                android:textColor="#363636"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_3"
            android:background="@drawable/shape_dash_line"
            android:layout_marginLeft="@dimen/dp_35"
            android:layout_marginRight="@dimen/dp_35"/>

        <LinearLayout
            android:id="@+id/linear_layout_withdraw_recording"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_47"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/dp_16"
                android:layout_height="@dimen/dp_16"
                android:src="@mipmap/mine_center_icon_02"
                android:layout_marginLeft="@dimen/dp_39"
                android:layout_gravity="center" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_gravity="center"
                android:text="提现记录"
                android:textSize="@dimen/sp_15"
                android:textColor="#363636"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_2"
            android:background="@drawable/shape_dash_line"
            android:layout_marginLeft="@dimen/dp_35"
            android:layout_marginRight="@dimen/dp_35"/>

        <LinearLayout
            android:id="@+id/linear_layout_my_bill"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_47"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/dp_16"
                android:layout_height="@dimen/dp_16"
                android:src="@mipmap/mine_center_icon_03"
                android:layout_marginLeft="@dimen/dp_39"
                android:layout_gravity="center" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_gravity="center"
                android:text="我的账单"
                android:textSize="@dimen/sp_15"
                android:textColor="#363636"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_2"
            android:background="@drawable/shape_dash_line"
            android:layout_marginLeft="@dimen/dp_35"
            android:layout_marginRight="@dimen/dp_35"/>

        <LinearLayout
            android:id="@+id/linear_layout_staff_management"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_47"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/dp_16"
                android:layout_height="@dimen/dp_16"
                android:src="@mipmap/mine_center_icon_04"
                android:layout_marginLeft="@dimen/dp_39"
                android:layout_gravity="center" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_gravity="center"
                android:text="员工管理"
                android:textSize="@dimen/sp_15"
                android:textColor="#363636"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_2"
            android:background="@drawable/shape_dash_line"
            android:layout_marginLeft="@dimen/dp_35"
            android:layout_marginRight="@dimen/dp_35"/>

        <LinearLayout
            android:id="@+id/linear_layout_bank_card_management"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_47"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/dp_16"
                android:layout_height="@dimen/dp_16"
                android:src="@mipmap/mine_center_icon_05"
                android:layout_marginLeft="@dimen/dp_39"
                android:layout_gravity="center" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_gravity="center"
                android:text="银行卡管理"
                android:textSize="@dimen/sp_15"
                android:textColor="#363636"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_2"
            android:background="@drawable/shape_dash_line"
            android:layout_marginLeft="@dimen/dp_35"
            android:layout_marginRight="@dimen/dp_35"/>
    </LinearLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/bt_out_login"
            android:layout_width="@dimen/dp_260"
            android:layout_height="@dimen/dp_44"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/dp_20"
            android:background="@drawable/login_button_true"
            android:gravity="center"
            android:text="退出登录"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/sp_17" />
    </RelativeLayout>


</LinearLayout>
