<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout style="@style/titlesytle">

        <RelativeLayout
            android:id="@+id/back"
            android:layout_width="@dimen/dp_30"
            android:layout_height="match_parent">

            <ImageView style="@style/titleback" />

        </RelativeLayout>

        <TextView
            style="@style/titletext"
            android:text="认证信息" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_47"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_18"
                        android:layout_gravity="center"
                        android:text="主体名称"
                        android:textSize="@dimen/sp_15"
                        android:textColor="#363636"/>
                </LinearLayout>


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:gravity="right"
                    android:layout_weight="2"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/tv_main_boby_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/dp_21"
                        android:layout_gravity="center"
                        android:text="星巴克（新尚天地店）"
                        android:textSize="@dimen/sp_15"
                        android:textColor="#363636"/>
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:background="#E6E6E6"
                android:layout_marginLeft="@dimen/dp_18"
                android:layout_marginRight="@dimen/dp_18"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_47"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_18"
                        android:layout_gravity="center"
                        android:text="主体类别"
                        android:textSize="@dimen/sp_15"
                        android:textColor="#363636"/>
                </LinearLayout>


                <LinearLayout
                    android:id="@+id/linear_layout_main_boby_category"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:gravity="right"
                    android:layout_weight="2"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/tv_category"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/dp_15"
                        android:layout_gravity="center"
                        android:text=""
                        android:textSize="@dimen/sp_15"
                        android:textColor="#363636"/>

                    <ImageView
                        android:layout_width="@dimen/dp_7"
                        android:layout_height="@dimen/dp_12"
                        android:layout_gravity="center"
                        android:src="@mipmap/sign_icon_black"
                        android:layout_marginRight="@dimen/dp_18"/>
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:background="#E6E6E6"
                android:layout_marginLeft="@dimen/dp_18"
                android:layout_marginRight="@dimen/dp_18"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_47"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_18"
                        android:layout_gravity="center"
                        android:text="身份证认证"
                        android:textSize="@dimen/sp_15"
                        android:textColor="#363636"/>
                </LinearLayout>


                <LinearLayout
                    android:id="@+id/linear_layout_id_card"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:gravity="right"
                    android:layout_weight="2"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/tv_id_card_certification"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/dp_15"
                        android:layout_gravity="center"
                        android:text=""
                        android:textSize="@dimen/sp_15"
                        android:textColor="#363636"/>

                    <ImageView
                        android:layout_width="@dimen/dp_7"
                        android:layout_height="@dimen/dp_12"
                        android:layout_gravity="center"
                        android:src="@mipmap/sign_icon_black"
                        android:layout_marginRight="@dimen/dp_18"/>
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:background="#E6E6E6"
                android:layout_marginLeft="@dimen/dp_18"
                android:layout_marginRight="@dimen/dp_18"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_47"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_18"
                        android:layout_gravity="center"
                        android:text="营业执照"
                        android:textSize="@dimen/sp_15"
                        android:textColor="#363636"/>
                </LinearLayout>


                <LinearLayout
                    android:id="@+id/linear_layout_open_license"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:gravity="right"
                    android:layout_weight="2"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/tv_open_license"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/dp_15"
                        android:layout_gravity="center"
                        android:text=""
                        android:textSize="@dimen/sp_15"
                        android:textColor="#363636"/>

                    <ImageView
                        android:layout_width="@dimen/dp_7"
                        android:layout_height="@dimen/dp_12"
                        android:layout_gravity="center"
                        android:src="@mipmap/sign_icon_black"
                        android:layout_marginRight="@dimen/dp_18"/>
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:background="#E6E6E6"
                android:layout_marginLeft="@dimen/dp_18"
                android:layout_marginRight="@dimen/dp_18"/>

            <LinearLayout
                android:id="@+id/linear_layout_my_contract"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_47"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_18"
                        android:layout_gravity="center"
                        android:text="我的合同"
                        android:textSize="@dimen/sp_15"
                        android:textColor="#363636"/>
                </LinearLayout>


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:gravity="right"
                    android:layout_weight="2"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/dp_15"
                        android:layout_gravity="center"
                        android:text=""
                        android:textSize="@dimen/sp_15"
                        android:textColor="#363636"/>

                    <ImageView
                        android:layout_width="@dimen/dp_7"
                        android:layout_height="@dimen/dp_12"
                        android:layout_gravity="center"
                        android:src="@mipmap/sign_icon_black"
                        android:layout_marginRight="@dimen/dp_18"/>
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:background="#E6E6E6"
                android:layout_marginLeft="@dimen/dp_18"
                android:layout_marginRight="@dimen/dp_18"/>
        </LinearLayout>

        <Button
            android:id="@+id/btn_submit_review"
            android:layout_width="@dimen/dp_260"
            android:layout_height="@dimen/dp_44"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/dp_50"
            android:background="@drawable/login_button"
            android:gravity="center"
            android:text="提交审核"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/sp_17" />
    </RelativeLayout>

</LinearLayout>